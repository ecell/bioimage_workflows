name: scopyon

conda_env: conda.yaml

entry_points:
  generation:
    parameters:
      image_path: path
    command: "python generation.py {image_path}"
  analysis1:
    parameters:
      generated_images: path
    command: "python analysis1.py {generated_images}"
  analysis2:
    parameters:
      analysis1_result: path
    command: "python analysis2.py {analysis1_result}"
  main:
    parameters:
      seed: {type: int, default: 123}
      N: {type: int, default: 1000}
      magnification: {type: int, default: '360'}
      exposure_time: {type: float, default: '0.033'}
    command: "python main.py {seed} {N} {magnification} {exposure_time}"
    
